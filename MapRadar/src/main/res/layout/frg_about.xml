<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent">

   <include layout="@layout/toolbar_actionbar"/>

    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "MapRadar"
            android:id = "@+id/textView5"
            android:textSize = "25sp"
            android:textStyle = "bold"
            android:layout_margin = "30dp" />

    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textAppearance = "?android:attr/textAppearanceMedium"
            android:text = "Diese App wurde im Rahmen der Vorlesung &quot;Interface Projects&quot; an der Hochschule Heilbronn entwickelt."
            android:id = "@+id/textView6"
            android:layout_marginLeft = "30dp"
            android:layout_marginRight = "30dp" />

    <RelativeLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center_horizontal"
            android:layout_marginTop = "150dp">

        <ImageButton
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/imageButton"
                android:layout_gravity = "right"
                android:src = "@drawable/ic_yelp"
                android:layout_centerHorizontal = "true"
                android:layout_below = "@+id/textView7"
                android:onClick = "openYelp" />

        <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance = "?android:attr/textAppearanceSmall"
                android:text = "powered by"
                android:id = "@+id/textView7"
                android:layout_alignParentTop = "true"
                android:layout_centerHorizontal = "true" />
    </RelativeLayout>

    <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Email an den Support schreiben"
            android:id = "@+id/button3"
            android:layout_gravity = "center_horizontal"
            android:onClick = "onClickEmail" />

</LinearLayout>